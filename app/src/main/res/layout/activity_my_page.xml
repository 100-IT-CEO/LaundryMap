<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyPageActivity">
    <ScrollView
        android:id="@+id/mypage_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal" >
            <ImageView
                android:id="@+id/mypage_profileImg"
                android:layout_marginTop="200dp"
                android:layout_marginBottom="50dp"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:src="@drawable/bongocat2"
                android:background="@drawable/round" />
            <TextView
                android:id="@+id/mypage_name"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:text="휘휘"
                android:textColor="#1A1A1A"
                android:layout_marginVertical="30dp"
                android:textSize="25pt"
                android:fontFamily="@font/nanumbrush"/>


            <TextView
                android:id="@+id/reg_date"
                android:fontFamily="@font/nanumsquareroundlight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="가입일 : 2022. 7. 12."
                android:textSize="10pt"
                android:layout_marginVertical="20dp"/>

            <TextView
                android:fontFamily="@font/nanumsquareroundlight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이용기록"
                android:textSize="10pt"
                android:layout_marginVertical="20dp"/>

            <TextView
                android:id="@+id/logout"
                android:fontFamily="@font/nanumsquareroundlight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="로그아웃"
                android:textSize="10pt"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="70dp"/>



        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>