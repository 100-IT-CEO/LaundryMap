                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="90dp"
                                android:layout_marginLeft="30dp"
                                android:layout_height="match_parent"
                                android:src="@drawable/washer"
                                />
