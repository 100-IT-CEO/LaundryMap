                                            android:layout_gravity="center_vertical"
                                            android:layout_width="20dp"
                                            android:layout_marginEnd="8dp"
                                            android:layout_height="match_parent"
                                            android:src="@drawable/down_arrow"/>
                                    </LinearLayout>


