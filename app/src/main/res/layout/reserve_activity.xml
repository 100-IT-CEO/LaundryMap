<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center_vertical"
    android:gravity="center">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="세탁기 예약하기"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#1A1A1A"
        android:textSize="15pt"
        android:layout_margin="20dp"
         />

    <TextView
        android:id="@+id/reserve_text_where"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="크린토피아 KAIST점"
        android:textColor="#1A1A1A"
        android:layout_gravity="right"
         />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:animateLayoutChanges="true"
                android:layout_marginTop="22dp"
                >
                <Button
                    android:id="@+id/reserve_button_1"
                    android:layout_width="300dp"
                    android:layout_height="97dp"
                    android:text="대형 세탁기"
                    android:textSize="10pt"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="70dp"
                    android:layout_marginLeft="70dp"/>

                <LinearLayout
                    android:id="@+id/layout_expand_1"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:background="#F5F5F5"
                    android:orientation="vertical"
                    android:visibility="visible">
                    <Button
                        android:id="@+id/asdf"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="#787878"
                        android:text="세탁기 #1"
                        android:textSize="8pt"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="80dp"
                        android:layout_marginLeft="80dp"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:animateLayoutChanges="true"
                android:layout_marginTop="22dp"
                >
                <Button
                    android:id="@+id/reserve_button_2"
                    android:layout_width="300dp"
                    android:layout_height="97dp"
                    android:text="대형 세탁기"
                    android:textSize="10pt"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="70dp"
                    android:layout_marginLeft="70dp"/>

                <LinearLayout
                    android:id="@+id/layout_expand_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#F5F5F5"
                    android:orientation="vertical"
                    android:visibility="gone">
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:animateLayoutChanges="true"
                android:layout_marginTop="22dp"
                >
                <Button
                    android:id="@+id/reserve_button_3"
                    android:layout_width="300dp"
                    android:layout_height="97dp"
                    android:text="대형 세탁기"
                    android:textSize="10pt"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="70dp"
                    android:layout_marginLeft="70dp"/>

                <LinearLayout
                    android:id="@+id/layout_expand_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#F5F5F5"
                    android:orientation="vertical"
                    android:visibility="gone">
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:animateLayoutChanges="true"
                    android:layout_marginTop="22dp"
                    >
                    <Button
                        android:id="@+id/reserve_button_4"
                        android:layout_width="300dp"
                        android:layout_height="97dp"
                        android:text="대형 세탁기"
                        android:textSize="10pt"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="70dp"
                        android:layout_marginLeft="70dp"/>

                    <LinearLayout
                        android:id="@+id/layout_expand_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#F5F5F5"
                        android:orientation="vertical"
                        android:visibility="gone">
                    </LinearLayout>

            </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>