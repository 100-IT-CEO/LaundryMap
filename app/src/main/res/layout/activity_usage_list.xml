<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="60dp">
        <ImageView
            android:id="@+id/goto_back_btn"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/left_arrow"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
        <TextView
            android:fontFamily="@font/nanumsquareroundeb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이용기록"
            android:textColor="#000000"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="17sp"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            />
    </LinearLayout>
<LinearLayout
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#D9EEFF">
    <LinearLayout
        android:layout_margin="3dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#405ECDFF">
        <LinearLayout

            android:layout_width='0dp'
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_height="100dp"
            android:layout_weight="2">
            <TextView
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textStyle="bold"
                android:fontFamily="@font/nanumsquareroundeb"
                android:textColor="#000000"
                android:text="총 이용 횟수" />
            <Button
                android:id="@+id/total_usage"
                android:fontFamily="@font/nanumsquareroundb"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="30dp"
                android:layout_width="100dp"
                android:text="10회"
                android:textSize="18dp"
                android:layout_height="40dp"
                android:background="@drawable/white_btn"
                />
        </LinearLayout>


            <LinearLayout
                android:paddingTop="20dp"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:fontFamily="@font/nanumsquareroundeb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="세탁기"
                    android:textColor="#03A9F4"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="15dp"
                    />
                <Button
                    android:id="@+id/washer_usage"
                    android:fontFamily="@font/nanumsquareroundb"
                    android:background="@drawable/white_btn"
                    android:layout_marginLeft="11dp"

                    android:layout_marginTop="8dp"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:text="4회"
                    android:textSize="15dp"
                    />
            </LinearLayout>

        <LinearLayout
            android:paddingTop="20dp"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:fontFamily="@font/nanumsquareroundeb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="건조기"
                android:textColor="#03A9F4"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="15dp"
                />
            <Button
                android:id="@+id/dryer_usage"
                android:fontFamily="@font/nanumsquareroundb"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="8dp"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:text="4회"

                android:background="@drawable/white_btn"
                android:textSize="15dp"
                />
        </LinearLayout>
        <LinearLayout
            android:paddingTop="20dp"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:fontFamily="@font/nanumsquareroundeb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="기타"
                android:textColor="#03A9F4"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="15dp"
                />
            <Button
                android:id="@+id/etc_usage"
                android:fontFamily="@font/nanumsquareroundb"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="8dp"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:text="2회"
                android:background="@drawable/white_btn"
                android:textSize="15dp"
                />
        </LinearLayout>



    </LinearLayout>

    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="477dp"
        android:layout_weight="1"
        android:scrollbarFadeDuration="0"
        android:scrollbarSize="5dp"
        android:scrollbarThumbVertical="@android:color/holo_orange_light"
        android:scrollbars="vertical">

    </androidx.recyclerview.widget.RecyclerView>


</LinearLayout>