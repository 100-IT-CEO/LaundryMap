<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/round"
        android:clipToOutline="true"
        android:src="@drawable/dryer" />


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:fontFamily="@font/nanumsquareroundeb"
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="개휘"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/gotoMypage_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/right_arrow"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            />

        <ImageView
            android:layout_width="0dp"
            android:layout_marginRight="20dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:src="@drawable/alarm"
            />

    </LinearLayout>



    <LinearLayout
        android:layout_marginLeft="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/navigation_bar_open_reservation"
            android:fontFamily="@font/nanumsquareroundlight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="예약기록"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_marginTop="10dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:id="@+id/layout_reservation"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:background="#c0eeff"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/reserve_washteria_name"
                    android:fontFamily="@font/nanumsquareroundeb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="크린토피아"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:fontFamily="@font/nanumsquareroundb"
                    android:id="@+id/reserve_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="예약중"
                    android:textStyle="bold"
                    android:textSize="13dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:fontFamily="@font/nanumsquareroundb"
                    android:id="@+id/reserve_washer_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="중형세탁기" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:fontFamily="@font/nanumsquareroundeb"
                    android:id="@+id/reserve_start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginRight="10dp"
                    android:text="10:30" />
            </LinearLayout>

            <Button
                android:id="@+id/reserve_cancel_btn"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:background="@drawable/dark_blue_btn"
                android:fontFamily="@font/nanumsquareroundeb"
                android:text="예약취소"
                android:textColor="#FFFFFF" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:paddingLeft="20dp"
            android:id="@+id/layout_goto_reservation"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:background="#c0eeff"
            android:orientation="vertical"
            android:visibility="visible">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_marginTop="8dp"
                    android:id="@+id/no_reservation_date"
                    android:fontFamily="@font/nanumsquareroundeb"
                    android:layout_width="match_parent"
                    android:textSize="15sp"
                    android:layout_height="wrap_content"
                    android:text="날짜" />


            </LinearLayout>

            <TextView
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:textSize="13sp"
                android:layout_height="wrap_content"
                android:text="등록된 예약이 없습니다!"/>

            <Button
                android:id="@+id/go_to_reserveCreateion"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/dark_blue_btn"
                android:fontFamily="@font/nanumsquareroundeb"
                android:text="예약하기"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </LinearLayout>




    <LinearLayout
        android:layout_marginLeft="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_marginTop="30dp">
        <TextView
            android:id="@+id/navigation_bar_open_useList"
            android:fontFamily="@font/nanumsquareroundlight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이용기록"
            android:textSize="20dp" />
        <LinearLayout
            android:id="@+id/layout_useList"
            android:layout_marginTop="10dp"
            android:padding="20dp"

            android:layout_width="300dp"
            android:layout_height="150dp"
            android:background="#c0eeff"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/use_washteria_name"
                    android:fontFamily="@font/nanumsquareroundeb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="크린토피아"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:fontFamily="@font/nanumsquareroundb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="이용중"
                    android:textStyle="bold"
                    android:textSize="13dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:id="@+id/use_washer_type"
                    android:fontFamily="@font/nanumsquareroundb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="중형세탁기" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/use_start_time"
                    android:fontFamily="@font/nanumsquareroundeb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginRight="10dp"
                    android:text="10:30" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/goto_use"
            android:layout_marginTop="10dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:background="#c0eeff"
            android:orientation="vertical"
            android:visibility="visible">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_marginTop="8dp"
                    android:id="@+id/no_useage_date"
                    android:fontFamily="@font/nanumsquareroundeb"
                    android:layout_width="match_parent"
                    android:textSize="15sp"
                    android:layout_height="wrap_content"
                    android:text="날짜" />


            </LinearLayout>

            <TextView
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:textSize="13sp"
                android:layout_height="wrap_content"
                android:text="이용중인 세탁기계가 없습니다!"/>

            <Button
                android:id="@+id/go_to_useListCreateion"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/dark_blue_btn"
                android:fontFamily="@font/nanumsquareroundeb"
                android:text="이용하기"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </LinearLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical">

        <TextView
            android:fontFamily="@font/nanumsquareroundlight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="친구초대"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical">

        <TextView
            android:fontFamily="@font/nanumsquareroundlight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="쿠폰"
            android:textSize="20dp" />
    </LinearLayout>

    <View
        android:layout_width="320dp"
        android:layout_height="1dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:background="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical">

        <TextView
            android:fontFamily="@font/nanumsquareroundlight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="공지 , 이벤트" />
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이용안내" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1:1 문의"

            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/btn_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="로그아웃"

            />


    </LinearLayout>

</LinearLayout>